<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/iv_anh"
            android:layout_width="120dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/btn_ai_dang_khen_hon"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_anh"
            android:textSize="13dp"
            android:textStyle="bold"
            android:text="Ai đáng khen hơn"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="@id/iv_anh"
            app:layout_constraintRight_toRightOf="@id/iv_anh"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>